<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="hu.petrik.javafilmdb.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#hozzaadas" text="Hozzáadás" />
         <Button mnemonicParsing="false" onAction="#modositas" text="Módosítás" />
         <Button mnemonicParsing="false" onAction="#torles" text="Törlés" />
      </children>
   </HBox>
   <TableView fx:id="filmTable" prefHeight="200.0" prefWidth="500.0">
     <columns>
       <TableColumn fx:id="colCim" minWidth="50.0" prefWidth="200.0" text="Cím" />
       <TableColumn fx:id="colKategoria" minWidth="150.0" prefWidth="150.0" text="Kategória" />
         <TableColumn fx:id="colHossz" minWidth="50.0" prefWidth="75.0" text="Hossz" />
         <TableColumn fx:id="colErtekeles" minWidth="50.0" prefWidth="75.0" text="Értékelés" />
     </columns>
   </TableView>
</VBox>
